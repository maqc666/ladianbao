    android:shape="rectangle">
    <!-- 填充的颜色 -->
<!--    <solid android:color="@color/color_main" />-->
    <!-- android:radius 弧形的半径 -->
    <!-- 设置按钮的四个角为弧形 -->
    <corners
        android:radius="25dip" />

    <gradient
        android:startColor="@color/color_3e97"

        android:endColor="@color/color_2760t"
        android:type="linear"
        android:angle="0"
        android:centerX="0.5"
        android:centerY="0.5" />

    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

</shape>
